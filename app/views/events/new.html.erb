<div class = "container">

    <h1>Create Event</h1>        
            
      <div class="row">
      <div class="col-md-12">
        <%= form_for(:event) do |f| %>
          
          <div class = "form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          <div>

          <div class = "form-group">
            <%= f.label :date %>
            <%= f.date_field :date, class: 'form-control' %>
          <div>
    
          <div class = "form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          <div>
          
          <div class = "form-group">
            <%= f.label :venue %>
            <%= f.text_field :venue, class: 'form-control' %><br />
          <div>
          
          <%= f.submit "Create Event", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
</div>